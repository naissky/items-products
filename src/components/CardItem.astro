---
const { title, price, image, isNew } = Astro.props;
---

<article class="col-span-full md:col-span-4 lg:col-span-3 max-w-80 relative group">
  <header>
    <div class="w-full overflow-hidden aspect-w-4 aspect-h-5 max-h-80">
      <img
        src={`/${image}`}
        alt=""
        class="object-cover w-full h-full transition-all duration-300 group-hover:scale-105"
      />
    </div>
    <div class="absolute left-3 top-3">
      {
        isNew && (
          <span class="bg-zinc-950 text-white text-xs font-semibold px-2 py-1 rounded-full">
            Nuevo
          </span>
        )
      }
    </div>
  </header>
  <div class="flex justify-between w-full mt-4">
    <div class=" flex flex-col items-start">
      <h3 class="text-xl font-semibold text-zinc-950">{title}</h3>
      <span class="flex gap-1">
        <img src="/Star.svg" alt="" />
        <img src="/Star.svg" alt="" />
        <img src="/Star.svg" alt="" />
      </span>
    </div>
    <div class="w-1/3 text-right">
      <span class="text-right text-xl font-semibold text-zinc-950">{price}</span
      >
    </div>
  </div>
</article>
